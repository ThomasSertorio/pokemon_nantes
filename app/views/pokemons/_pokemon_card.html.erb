<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url(<%= pokemon.front_default %>);">
  <div class="card-category"><%= pokemon.category %></div>
  <div class="card-description">
    <h2><%= pokemon.name.capitalize %></h2>
  </div>
  <%= image_tag pokemon.back_default, class:"card-user avatar"%>
</div>
